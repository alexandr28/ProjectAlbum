block config
    include ../config/config

<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(rel="stylesheet" href='./css/style.css')
        link(href="https://fonts.googleapis.com/css?family=Indie+Flower|Open+Sans|Raleway|Roboto" rel="stylesheet")
        link(href="https://file.myfontastic.com/jgnvzMJVWgXbQyy6e3wFqG/icons.css" rel="stylesheet")
        title #{pageTitle} | #{siteTitle}
    body
        header(class="main-header main-container")
          div(class="main-header-1")
             img(class="logo" src="./img/logo.png")
          div(class="main-header-2")
             div(class="contact-widget")
                 div(class="contact-widget__icon icon-call button button--dark button--square")
                 div(class="contact-widget__data")
                     h3(class="contact-widget__title") Call now
                     p(class="contact-widget__content") 926-789-224
             div(class="contact-widget")
                 div(class="contact-widget__icon icon-pin location button button--dark button--square")
                 div(class="contact-widget__data")
                     h3(class="contact-widget__title") Our Location
                     p(class="contact-widget__content") Calle los Cantaros 435 Lima-Peru
             a(href="#" class="donate button button--dark") Donate now
        div(id="toggle-menu" class="icon-bars toggle-menu")
        nav(class="main-nav main-container" id="nav")
          ul(class="main-menu")
              li(class="main-menu__item")
                a( class="main-menu__link" href="./") Home
              li(class="main-menu__item")
                a( class="main-menu__link" href="./albunes.html") Albunes
              li(class="main-menu__item")
                  a( class="main-menu__link" href="./acercaDe.html") Nosotros
              li(class="main-menu__item")
                  a( class="main-menu__link" href="./contactanos.html") Contacto
          div(class="social-networks")
              a(class="icon-facebook" href="https://www.facebook.com")
              a(class="icon-twitter" href="https://twitter.com")
              a(class="icon-instagram" href="https://www.instagram.com")
              a(class="icon-youtube" href="https://www.youtube.com")
        div(class="main-banner main-container")
            img(src="./img/banner-1.jpg" alt="" class="main-banner__img")
            div(class="main-banner__data")
                h2(class="main-banner__title") Go Paisajes
                p(class="main-banner__subtitle") Atravez del cristal del mundo
                p(class="main-banner__description") Paisajismo es la actividad destinada a modificar lascaracterísticas visibles, físicas y anímicas de un  físicas y anímicas de un espacio
                a(href="#" class="main-banner__button button button--light") Join now
                a(href="#" class="main-banner__button button button--cta") Donate now
        block main
        script(src="./js/eventos.js")
